<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-reverse-engineering
  SYSTEM "http://hibernate.sourceforge.net/hibernate-reverse-engineering-3.0.dtd">

<hibernate-reverse-engineering>

	<!--  Schema filter ~ this selects everything... -->
	<!--  <schema-selection match-catalog=".*" match-schema=".*" match-table=".*"/>  -->
	
    <!-- Type mappings...
    	<sql-type jdbc-type="VARCHAR" length="20" hibernate-type="SomeUserType"/>
     -->

    <!-- Table filtering -->
    <table-filter match-name="building" />
    <table-filter match-name="lkCountryCode" />
    <table-filter match-name="floor" />
    <table-filter match-name="room" />
    
	<!-- Specific table configuration... -->
	
	<table catalog="Rendezvous" name="building">
 	    <foreign-key constraint-name="fk_building_countryCode" foreign-catalog="Rendezvous" foreign-table="lkCountryCode">
	    	<column-ref local-column="countryCode" foreign-column="countryCode"/>
	        <many-to-one property="lkCountryCode"/>
	    </foreign-key>
	</table>
	
	<table catalog="Rendezvous" name="floor">
	    <foreign-key constraint-name="fk_floor_building" foreign-catalog="Rendezvous" foreign-table="building">
	    	<column-ref local-column="buildingId" foreign-column="buildingId"/>
	        <set property="floors"/>
	    </foreign-key>
	</table>

</hibernate-reverse-engineering>